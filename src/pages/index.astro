---
import Button from "@components/Button.astro";
import CTA from "@sections/CTA.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Hero from "@sections/Hero.astro";
import Intro from "@sections/Intro.astro";
import Layout from "@layouts/Layout.astro";
import Sidebar from "@layouts/Sidebar.astro";
---

<Layout title="Power Platform Components">
  <Sidebar class="lg:hidden" />
  <Header />
  <main>
    <Hero
      align="center"
      title="A collection of <strong>Power Platform Components</strong>"
      description="You can use these components to build your Power Apps, Power Pages, Copilot Studio projects faster."
    >
      <div>
        <Button href="/guide/power-apps-configuration" label="Get started" />
      </div>
    </Hero>
    <Intro />
    <CTA
      align="center"
      title="Ready to <strong>Get Started?</strong>"
      description="Explore my collection of Power Platform components and start building your next project today."
    >
      <Button
        href="/power-apps-components/accordion"
        label="Explore Components"
      />
    </CTA>
  </main>
  <Footer />
</Layout>
